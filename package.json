{
  "name": "columnist-db",
  "version": "1.1.0",
  "private": false,
  "description": "Lightning-fast, semantic-ready client-side database with IndexedDB persistence, full-text search, vector search, and React hooks",
  "keywords": [
    "database",
    "indexeddb",
    "client-side",
    "typescript",
    "react",
    "search",
    "vector",
    "embedding",
    "offline-first"
  ],
  "author": "Columnist.live",
  "license": "MIT",
  "homepage": "https://columnist.live",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeisdemode/db.git"
  },
  "bugs": {
    "url": "https://github.com/codeisdemode/db/issues"
  },
  "main": "./dist/lib/index.js",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "require": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    },
    "./schema": {
      "import": "./dist/lib/schema-examples.js",
      "require": "./dist/lib/schema-examples.js",
      "types": "./dist/lib/schema-examples.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "zod": ">=3.20.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "scripts": {
    "build": "next build",
    "build:lib": "tsc --project tsconfig.lib.json",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "prepublishOnly": "npm run build:lib",
    "typecheck": "tsc --noEmit"
  },
