{
  "name": "columnist",
  "version": "1.0.0",
  "private": true,
  "description": "Modular client-side database ecosystem - shadcn style",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/plugins/*",
    "packages/tables/*",
    "examples/*"
  ],
  "keywords": [
    "database",
    "indexeddb",
    "client-side",
    "typescript",
    "react",
    "search",
    "vector",
    "embedding",
    "offline-first"
  ],
  "author": "Columnist.live",
  "license": "MIT",
  "homepage": "https://columnist.live",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codeisdemode/db.git"
  },
  "bugs": {
    "url": "https://github.com/codeisdemode/db/issues"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "publish-packages": "turbo run build && npm run publish:packages",
    "publish:packages": "npm publish --workspace=packages/core --workspace=packages/hooks --workspace=packages/plugins/openai-embedding --workspace=packages/tables/notes --workspace=packages/tables/tasks"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0"
}